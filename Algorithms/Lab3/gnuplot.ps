#!/bin/bash
#to run:
#	cat gnuplot.ps | gnuplot

#  feh 'image.png to see the image in terminal
#  set terminal png
#  set output 'image.png
  plot 'lcs.data' using 1:3 with linespoints
  set logscale x 10
  replot
  set title "My LCS algorithm"
  set xlabel "Time (Seconds)"
  set ylabel "Size (N)"
  replot
  f(x) = A*x**2
  fit f(x) 'lcs.data' via A
  plot 'lcs.data' using 1:3 with linespoints, f(x)
  replot
  reread
  pause 1000
  pause -1
